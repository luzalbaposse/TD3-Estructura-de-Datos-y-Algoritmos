{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/<nombre-de-tu-programa>", // Reemplaza <nombre-de-tu-programa> con el nombre de tu archivo ejecutable
            "args": [], // Aquí puedes agregar argumentos de línea de comandos si tu programa los necesita
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build" // Esto asume que tienes una tarea de compilación llamada "build" configurada en tu archivo tasks.json
        }
    ]
}